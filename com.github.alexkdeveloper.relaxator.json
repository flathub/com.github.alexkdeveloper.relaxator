{
    "app-id": "com.github.alexkdeveloper.relaxator",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "command": "com.github.alexkdeveloper.relaxator",
    "finish-args": [
       "--device=dri",
       "--share=ipc",
       "--socket=fallback-x11",
       "--socket=wayland",
       "--socket=pulseaudio"
    ],
    "cleanup": [
       "/include",
       "/lib/pkgconfig",
       "/man",
       "/share/doc",
       "/share/gtk-doc",
       "/share/man",
       "/share/pkgconfig",
       "/share/vala",
       "*.la",
       "*.a"
    ],
    "modules": [
       {
          "name": "Relaxator",
          "buildsystem": "meson",
          "sources": [
              {
                "type" : "git",
                "url" : "https://github.com/alexkdeveloper/relaxator.git",
                "tag" : "1.0.0",
                "commit" : "f8ed314cb7f299a573b06ff35a1b88488b354206"
              }
          ]
        }
    ]
  }
